<policies>
  <inbound>
    <!-- Require subscription key (header: Ocp-Apim-Subscription-Key) -->
    <base />
    <rate-limit-by-key calls="60" renewal-period="60" increment-condition="@(true)" 
      counter-key="@(context.Subscription?.Key ?? "anonymous")" />
    <set-backend-service base-url="https://maplecart-funcapp.azurewebsites.net/api" />
    <set-header name="x-functions-key" exists-action="override">
      <value>{{FUNCTION_DEFAULT_KEY}}</value>
    </set-header>
  </inbound>
  <backend>
    <base />
  </backend>
  <outbound>
    <base />
  </outbound>
  <on-error>
    <base />
  </on-error>
</policies>
